---
import { Image } from 'astro:assets';
import HeroImage from '@assets/quick-bio/hero.png';
---

<div class='bg-white dark:bg-slate-900 pb-16'>
  <div class='relative isolate pt-8'>
    <div class='py-8 sm:py-16 lg:pb-24'>
      <div class='mx-auto max-w-7xl px-6 lg:px-8'>
        <div class='mx-auto max-w-2xl text-center'>
          <h1
            class='text-4xl font-bold tracking-tight text-gray-900 dark:text-gray-300 sm:text-6xl'
          >
            Quickly build your personal profile
          </h1>
          <p class='mt-6 text-lg leading-8 text-gray-600 dark:text-gray-400'>
            Create your one pager bio and link all your social profiles, collect
            leads or just showcase your work.
          </p>
          <div class='mt-10 flex items-center justify-center gap-x-6'>
            <a
              href='https://bio.quicklabs.in/auth/signup'
              target='_blank'
              class='flex items-center justify-center rounded-md border border-transparent bg-gray-800 dark:bg-gray-600 px-5 py-3 text-base font-medium text-white hover:bg-gray-900 dark:hover:bg-gray-500'
              >Get started</a
            >
          </div>
        </div>
        <div class='mt-16 flow-root sm:mt-24'>
          <div
            class='-m-2 rounded-xl bg-gray-900/5 p-2 ring-1 ring-inset ring-gray-900/10 lg:-m-4 lg:rounded-2xl lg:p-4'
          >
            <Image
              src={HeroImage}
              alt='App screenshot'
              width='2432'
              height='1442'
              class='rounded-md shadow-2xl ring-1 ring-gray-900/10'
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
