---
import Container from "@components/container.astro";
import ToggleMenu from "@components/navbar/toggleMenu.astro";

const menuitems = [
  {
    title: "Home",
    path: "/",
    target: "_self",
  },
  {
    title: "Features",
    path: "#features",
    target: "_self",
  },
  {
    title: "Pricing",
    path: "#pricing",
    target: "_self",
  },
  {
    title: "Faqs",
    path: "#faqs",
    target: "_self",
  },
  {
    title: "Login",
    path: "https://test.quicklabs.in/signin",
    target: "_blank",
  },
];
---

<Container isNavbar>
  <header
    class="bg-white dark:bg-slate-900 mx-auto w-full md:h-auto"
    id="header"
  >
    <div
      class="relative text-default py-4 mx-auto w-full items-center md:flex md:justify-between"
    >
      <div class="flex items-center justify-between">
        <a class="" href="/quick-test">
          <span class="font-extrabold text-slate-800 dark:text-slate-100"
            >Quick</span
          ><span class="font-semibold text-slate-400"> Test</span>
        </a>
        <div class="md:hidden">
          <ToggleMenu />
        </div>
      </div>

      <nav
        class="items-center w-full md:w-auto hidden md:flex text-default overflow-y-auto overflow-x-hidden md:overflow-y-visible md:overflow-x-auto md:mx-5"
        aria-label="Main navigation"
      >
        <ul
          class="md:items-center flex flex-col justify-start md:flex-row w-full md:w-auto text-base lg:text-[0.9375rem] tracking-[0.01rem] font-medium"
        >
          {
            menuitems.map(({ title, path, target: hrefTarget }) => (
              <>
                <li class="menubar md:hidden">
                  <a
                    class="flex md:px-3 py-2 text-gray-600 hover:text-gray-900 dark:text-gray-200 dark:hover:text-gray-400"
                    href={path}
                    target={hrefTarget}
                  >
                    <span class="flex items-center gap-x-1">
                      <p>{title}</p>
                      {title === "Login" ? (
                        <span class="font-bold">
                          <svg
                            width="16"
                            height="16"
                            viewBox="0 0 24 24"
                            xmlns="http://www.w3.org/2000/svg"
                            fill-rule="evenodd"
                            clip-rule="evenodd"
                            class="text-gray-600 hover:text-gray-900 dark:text-gray-200 dark:hover:text-gray-400"
                          >
                            <path
                              fill="currentColor"
                              d="M21.883 12l-7.527 6.235.644.765 9-7.521-9-7.479-.645.764 7.529 6.236h-21.884v1h21.883z"
                            />
                          </svg>
                        </span>
                      ) : null}
                    </span>
                  </a>
                </li>
                <li class="hidden md:block">
                  <a
                    class="flex md:px-3 py-2 text-gray-600 hover:text-gray-900 dark:text-gray-200 dark:hover:text-gray-400"
                    href={path}
                    target={hrefTarget}
                  >
                    <span class="flex items-center gap-x-1">
                      <p>{title}</p>
                      {title === "Login" ? (
                        <span class="font-bold">
                          <svg
                            width="16"
                            height="16"
                            viewBox="0 0 24 24"
                            xmlns="http://www.w3.org/2000/svg"
                            fill-rule="evenodd"
                            clip-rule="evenodd"
                            class="text-gray-600 hover:text-gray-900 dark:text-gray-200 dark:hover:text-gray-400"
                          >
                            <path
                              fill="currentColor"
                              d="M21.883 12l-7.527 6.235.644.765 9-7.521-9-7.479-.645.764 7.529 6.236h-21.884v1h21.883z"
                            />
                          </svg>
                        </span>
                      ) : null}
                    </span>
                  </a>
                </li>
              </>
            ))
          }
        </ul>
      </nav>
    </div>
  </header>
</Container>
