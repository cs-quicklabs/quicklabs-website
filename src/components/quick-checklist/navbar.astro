---
import { Astronav, MenuItems, MenuIcon } from 'astro-navbar';

const menuitems = [
  {
    title: 'Home',
    path: '/',
  },
  {
    title: 'Features',
    path: '#features',
  },
  {
    title: 'Pricing',
    path: '#pricing',
  },
  {
    title: 'Faqs',
    path: '#faqs',
  },
  {
    title: 'Login ->',
    path: 'https://www.bio.quicklabs.in',
  },
];
---

<header
  class='flex flex-col lg:flex-row justify-between items-center my-5 max-w-screen-xl mx-auto'
>
  <Astronav>
    <div class='flex w-full lg:w-auto items-center justify-between'>
      <a href='/quick-checklist' class='text-lg'
        ><span class='font-extrabold text-slate-800 dark:text-slate-100'
          >Quick</span
        ><span class='font-semibold text-slate-500 dark:text-slate-400'>
          Checklist</span
        >
      </a>
      <div class='block lg:hidden'>
        <MenuIcon class='w-4 h-4 text-gray-800 dark:text-gray-200' />
      </div>
    </div>
    <MenuItems class='hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0'>
      <ul class='flex flex-col lg:flex-row lg:gap-3'>
        {
          menuitems.map((item, index) => (
            <>
              {item && (
                <li>
                  <a
                    href={item.path}
                    class='flex lg:px-3 py-2 text-gray-600 hover:text-gray-900 dark:text-gray-200 dark:hover:text-gray-400'
                  >
                    {item.title}
                  </a>
                </li>
              )}
            </>
          ))
        }
      </ul>
    </MenuItems>
  </Astronav>
</header>
