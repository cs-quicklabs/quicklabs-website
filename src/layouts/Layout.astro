---
import "../tailwind.css";
import { SEO } from "astro-seo";
import Footer from "@components/footer.astro";
import "@fontsource-variable/inter/index.css";
import BaseScript from "@components/BaseScript.astro";
import NavbarNew from "@components/navbar/navbar_new.astro";

export interface Props {
  title: string;
  description: string;
  image: string;
  url: string;
}

const canonicalURL = new URL(Astro.request.url, Astro.site);
const resolvedImageWithDomain = "https://www.quicklabs.in/quicklabs.png";
const { title, description, image, url } = Astro.props;
const pageTitle = title ? title : "Quicklabs";
const pageDescription = description
  ? description
  : "Quicklabs builds software for small businesses.";
const pageImage = image ? image : resolvedImageWithDomain;
const pageURL = url ? new URL(url) : canonicalURL;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
    <meta name="generator" content={Astro.generator} />

    <!-- <link rel="preload" as="image" href={src} alt="Hero" /> -->
    <SEO
      title={pageTitle}
      description={pageDescription}
      canonical={pageURL}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: pageTitle,
          image: pageImage,
        },
        image: {
          alt: "Quicklabs",
        },
      }}
    />
  </head>
  <body
    class="bg-white text-slate-700 antialiased selection:bg-blue-500 selection:text-white dark:bg-slate-900 dark:text-slate-400 dark:selection:bg-sky-500"
  >
    <BaseScript />
    <NavbarNew />
    <slot />
    <Footer />
    <style is:global>
      /* Improve Page speed */
      /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>
